{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "systemd",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": false
      }
    }
  },
  "Mqtt": {
    "topic": "brewhub;1"
  },
  "InitialState": {
    "Root": {
      "serialNumber": "1234567890-ABCDEF",
      "telemetryPeriod": "PT2S"
    },
    "thermostat1": {
      "targetTemperature": 102.0
    },
    "thermostat2": {
      "targetTemperature": 90.0
    },
    "deviceInformation": {
      "manufacturer": "BrewHub",
      "model": "Example Thermostat Controller"
    }
  }
}
