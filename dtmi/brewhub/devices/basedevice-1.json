{
    "@context": "dtmi:dtdl:context;2",
    "@id": "dtmi:brewhub:devices:BaseDevice;1",
    "@type": "Interface",
    "displayName": {
        "en": "BrewHub Base Device v1"
    },
    "description": "Common metrics applicable to all devices. Extend this to add solution-specific metrics.",
    "extends": "dtmi:azure:DeviceManagement:DeviceInformation;1",
    "contents": [
        {
            "@type": [
              "Telemetry",
              "DataSize",
              "Dashboard"
            ],
            "description": "Current working set of the device memory in KiB.",
            "displayName": "Current Working Set",
            "name": "WorkingSet",
            "schema": "double",
            "unit": "kibibit",
            "chartlevel": "component"
        },
        {
            "@type": [
              "Telemetry",
              "Load",
              "Dashboard"
            ],
            "name": "CpuLoad",
            "description": "Current CPU load",
            "displayName": "CPU Load",
            "schema": "double",
            "unit": "percent",        
            "chartlevel": "device"
        },
        {
          "@type":
          [
            "Telemetry",
            "Status",
            "Dashboard"
          ],
          "name": "Status",
          "description": "Zero is OK, >0 increasing severity to 999",
          "schema": "integer",
          "metriclevel": "solution"
        },
        {
          "@type": "Property",
          "name": "TelemetryInterval",
          "displayName": "Telemetry Interval",
          "writable": true,
          "schema": "duration",
          "description": "How frequently to send telemetry"
        },
        {
            "@type": "Property",
            "displayName": "Serial Number",
            "name": "SerialNumber",
            "schema": "string",
            "writable": false
        },
        {
            "@type": "Property",
            "displayName": {
              "en": "Start Time"
            },
            "name": "StartTimeUTC",
            "description": "Time this device was last started (UTC)",
            "schema": "dateTime",
            "writable": false
        },
        {
            "@type": "Command",
            "commandType": "synchronous",
            "description": {
              "en": "Reboots the device after waiting the specified time."
            },
            "displayName": {
              "en": "Restart Device"
            },
            "name": "reboot",
            "request": {
              "@type": "CommandPayload",
              "displayName": {
                "en": "Delay"
              },
              "description": {
                "en": "How long to wait before rebooting the device."
              },
              "name": "delay",
              "schema": "duration"
            }
        },
        {
          "@type": [
            "Property",
            "DataSize",
            "Dashboard"
          ],
          "description": "Current working set of the device memory in KiB.",
          "displayName": "Current Working Set",
          "name": "CurrentWorkingSet",
          "schema": "double",
          "unit": "kibibit",
          "metriclevel": "never"
        },
      {
        "@type": [
          "Property",
          "Load",
          "Dashboard"
        ],
        "name": "CurrentCpuLoad",
        "displayName": "Current CPU Load",
        "schema": "double",
        "unit": "percent",
        "metriclevel": "never"
      },
      {
        "@type":
        [
          "Property",
          "Status",
          "Dashboard"
        ],
        "name": "CurrentStatus",
        "displayName": "Current Status",
        "description": "Zero is OK, >0 increasing severity to 999",
        "schema": "integer",
        "metriclevel": "never"
      }
    ]
}