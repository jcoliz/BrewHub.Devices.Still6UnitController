{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "systemd",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": false
      }
    }
  },
  "Mqtt": {
    "topic": "brewhub;1"
  },
  "InitialState": {
    "Root": {
      "SerialNumber": "1234567890-ABCDEF",
      "TelemetryPeriod": "PT2S",
      "manufacturer": "BrewHub",
      "model": "6-Unit Distillery Prototype v1"
    },
    "Components": {
      "amb": true,
      "rt": true,
      "ct": true,
      "rv": true,
      "cv": true
    },
    "rt": {
      "targetTemp": 80.0,
      "Tolerance": 0,
      "HotAccel": 0.2,
      "ColdAccel": -0.05,
      "Temperature": 80.0
    },
    "rv": {
      "sourceMetric": "rt.overTemp"
    },
    "ct": {
      "targetMetric": "amb.t",
      "Tolerance": 1.0,
      "Temperature": 80.0,
      "HotAccel": 0.8,
      "ColdAccel": -1.0
    },
    "cv": {
      "sourceMetric": "ct.overTemp"
    }
  }
}
